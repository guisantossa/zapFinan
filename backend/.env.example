# Environment Configuration Example for ZapGastos Backend

# Database Configuration
DATABASE_URL=
DATABASE_HOST=
DATABASE_PORT=
DATABASE_USER=
DATABASE_PASSWORD=
DATABASE_NAME=

# Application Configuration
APP_NAME="ZapGastos API"
DEBUG=True
SECRET_KEY=
API_VERSION=v1

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]

# JWT Configuration
JWT_SECRET_KEY=
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_MINUTES=10080

# Redis Configuration (if using for caching/sessions)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Email Configuration (if using for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=
EMAIL_USE_TLS=True

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads/

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=detailed

# Environment
ENVIRONMENT=development

# External API Keys (if any)
# EXTERNAL_API_KEY=your-api-key
